@*
    See a list of all the movies in his collection 
*@
@{
    ViewData["Title"] = "Movie List";
}

@model List<Form>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Actions</td>
        </tr>
    </thead>
    
    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.Category?.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <a class="btn btn-warning btn-sm me-1" asp-controller="Home" asp-action="Edit" asp-route-id="@x.FormId">
                        ‚úèÔ∏è Edit
                    </a>
                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.FormId">
                        üóëÔ∏è Delete
                    </a>
                </td>
            </tr>
        </tbody>
    }
</table>